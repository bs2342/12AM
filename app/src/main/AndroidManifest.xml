<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.billy.kilamonsta">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HelpActivity"
                  android:label="Help"
                  android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.billy.kilamonsta.MainActivity"/>
        </activity>
        <activity android:name=".NumberOfPlayersActivity"
            android:label="Number Of Players"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.billy.kilamonsta.MainActivity"/>
        </activity>
        <activity android:name=".CharacterSelectActivity"
            android:label="Character Select"
            android:parentActivityName=".NumberOfPlayersActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.billy.kilamonsta.MainActivity"/>
        </activity>
        <activity android:name=".GameActivity"
            android:label="Game Stat"
            android:parentActivityName=".NumberOfPlayersActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.billy.kilamonsta.MainActivity"/>
        </activity>
    </application>

</manifest>